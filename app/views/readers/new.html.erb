<section>
    <header>
        <h1>Sign up</h1>

        <%= render partial: "layouts/errors", locals: { object: @reader } %>

        <%= form_for(@reader) do |f| %>

            <%= f.label :username %><br>
            <%= f.text_field :username %>
                <br>
                <br>
            <%= f.label :email %><br>
            <%= f.email_field :email %>
                <br>
                <br>
            <%= f.label :password %><br>
            <%= f.password_field :password %>
                <br>
                <br>
            <%= f.submit "Create an account" %>
            
        <% end %>

    </header>


    <footer>
    </footer>
</section>